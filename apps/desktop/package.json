{
    "name": "@display-extended/desktop",
    "version": "1.0.0",
    "productName": "DisplayExtendedDesktop",
    "description": "Display Extended Desktop App",
    "author": "Display Extended Team",
    "private": true,
    "main": "main.js",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "start": "electron .",
        "dev": "electron .",
        "build": "electron-builder build",
        "build:win": "electron-builder build --win",
        "build:mac": "electron-builder build --mac"
    },
    "dependencies": {
        "@nut-tree-fork/nut-js": "^4.2.6",
        "electron-is-dev": "2.0.0"
    },
    "devDependencies": {
        "cross-env": "^10.1.0",
        "electron": "^28.1.0",
        "electron-builder": "^26.8.1",
        "electron-builder-squirrel-windows": "^26.8.1",
        "electron-rebuild": "^3.2.9"
    },
    "build": {
        "appId": "com.display-extended.desktop",
        "mac": {
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ]
        }
    }
}
